<% if data.humans.team %>
/* TEAM */
  <% data.humans.team.each do |member| %>
    <%= "<#{member.name}> - #{member.role} - <#{member.contact}>" %>
  <% end %>
<% end %>

/* THANKS */
<% if data.humans.shoutouts %>
    <% data.humans.shoutouts.each do |shoutout| %>
    <%= "<#{shoutout.name}> -- <#{shoutout.contact}>" %>
  <% end %>
<% end %>
